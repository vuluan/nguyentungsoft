<!-- BEGIN SLIDER -->
<div class="page-slider margin-bottom-35">
    <div id="carousel-example-generic" class="carousel slide carousel-slider">
        <!-- Indicators -->
        {% if banners and banners['total'] > 1 %}
            <ol class="carousel-indicators">
                {% for i in 0..banners['total'] - 1 %}
                    <li data-target="#carousel-example-generic" data-slide-to="{{ i }}" class="{{ i == 0 ? 'active' : '' }}"></li>
                {% endfor %}
            </ol>
        {% endif %}

        <!-- Wrapper for slides -->
        {# banner \Base\AdminBundle\Entity\Banner #}
        <div class="carousel-inner" role="listbox">
            {% for banner in banners['items'] %}
                <div class="item carousel-item-four {{ loop.index }} {{ loop.index == 1 ? 'active' : '' }}"
                     style="background: url('{{ resizeImage(banner_directory ~ banner.image, 0, 800, 1) }}')">
                    <div class="container">
                        <div class="carousel-position-four text-center">
                            <p class="carousel-subtitle-v2" data-animation="animated fadeInUp">{{ banner.description | raw }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% if banners and banners['total'] > 1 %}
        <!-- Controls -->
        <a class="left carousel-control carousel-control-shop" href="#carousel-example-generic" role="button" data-slide="prev">
            <i class="fa fa-angle-left" aria-hidden="true"></i>
        </a>
        <a class="right carousel-control carousel-control-shop" href="#carousel-example-generic" role="button" data-slide="next">
            <i class="fa fa-angle-right" aria-hidden="true"></i>
        </a>
        {% endif %}
    </div>
</div>
<!-- END SLIDER -->