{% extends '@BaseAdminBundle/Template/base-amaze-admin.html.twig' %}

{% block right_content %}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form id="allInputsFormValidation" class="form-horizontal" action="{{ path('base_admin_account_create') }}" method="post" novalidate="novalidate" enctype="multipart/form-data">
                        <div class="content">
                            <h4 class="title">Tạo tài khoản</h4>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Trạng thái
                                    </label>
                                    <div class="col-md-10">
                                        <label class="radio">
                                            <span class="icons"><span class="first-icon fa fa-circle-o"></span><span class="second-icon fa fa-dot-circle-o"></span></span>
                                            <input type="radio" data-toggle="radio" name="status" value="1" checked="checked"> Đang hoạt động
                                        </label>
                                        <label class="radio">
                                            <span class="icons"><span class="first-icon fa fa-circle-o"></span><span class="second-icon fa fa-dot-circle-o"></span></span>
                                            <input type="radio" data-toggle="radio" name="status" value="0"> Ngưng hoạt động
                                        </label>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Hình đại diện
                                    </label>
                                    <div class="col-md-10">
                                        <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                            <div class="fileinput-new thumbnail">
                                                <img src="{{ absolute_url(asset('assets/img/image_placeholder.jpg')) }}" alt="Image" width="100" height="100">
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail" style=""></div>
                                            <div>
                                                <span class="btn btn-default btn-fill btn-file">
                                                    <span class="fileinput-new">Select image</span>
                                                    <span class="fileinput-exists">Change</span>
                                                    <input type="hidden"><input type="file" name="avatar">
                                                </span>
                                                <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Họ tên
                                    </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="name" required="required">
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Email
                                    </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="email" name="email" email="true" required="required">
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Số điện thoại
                                    </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="phone" number="true">
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        CMND
                                    </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="identityCard" number="true">
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Quê quán
                                    </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="homeTown">
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Kinh nghiệm
                                    </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="experience">
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Chức vụ
                                    </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="position">
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Hộ khẩu
                                    </label>
                                    <div class="col-sm-10">
                                        <textarea class="form-control" placeholder="Hộ khẩu thường trú" rows="3"></textarea>
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Ngày vào làm
                                    </label>
                                    <div class="col-sm-4">
                                        <input class="form-control datepicker" type="text" name="startWorkingDate">
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Lương cơ bản
                                    </label>
                                    <div class="col-sm-4">
                                        <div class="input-group">
                                            <input class="form-control" type="text" name="basicSalary">
                                            <span class="input-group-addon">VNĐ</span>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Tên đăng nhập
                                    </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text" name="username">
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Mật khẩu
                                    </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="password" name="password">
                                    </div>
                                </div>
                            </fieldset>

                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">
                                        Phân Quyền
                                    </label>
                                    <div class="col-sm-10">
                                        {% for key, permission in listPermission %}
                                            <label class="checkbox">
                                                <span class="icons">
                                                    <span class="first-icon fa fa-square"></span>
                                                    <span class="second-icon fa fa-check-square "></span>
                                                </span>
                                                <input type="checkbox" data-toggle="checkbox" value="{{ key }}" name="permission[]"> {{ permission }}
                                            </label>
                                        {% endfor %}
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="card-footer text-right">
                            <a href="{{ path('base_admin_account_index') }}" class="btn">
                                <span class="btn-label">
                                    <i class="ti-angle-left"></i>
                                </span>
                                Trở về danh sách tài khoản
                            </a>
                            <button type="submit" class="btn btn-info btn-fill">Lưu thông tin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <!-- Forms Validations Plugin -->
    <script src="{{ absolute_url(asset('assets/vendors/jquery.validate.min.js')) }}"></script>
    <!--  Plugin for Date Time Picker and Full Calendar Plugin-->
    <script src="{{ absolute_url(asset('assets/vendors/moment.min.js')) }}"></script>
    <!--  Charts Plugin -->
    <script src="{{ absolute_url(asset('assets/vendors/chartist.min.js')) }}"></script>
    <!--  Plugin for the Wizard -->
    <script src="{{ absolute_url(asset('assets/vendors/jquery.bootstrap-wizard.js')) }}"></script>
    <!--  Notifications Plugin    -->
    <script src="{{ absolute_url(asset('assets/vendors/bootstrap-notify.js')) }}"></script>
    <!-- DateTimePicker Plugin -->
    <script src="{{ absolute_url(asset('assets/vendors/bootstrap-datetimepicker.js')) }}"></script>
    <!--  Checkbox, Radio, Switch and Tags Input Plugins -->
    <script src="{{ absolute_url(asset('assets/js/bootstrap-checkbox-radio-switch-tags.js')) }}"></script>
    <!-- Vector Map plugin -->
    <script src="{{ absolute_url(asset('assets/vendors/jquery-jvectormap.js')) }}"></script>
    <!-- Sliders Plugin -->
    <script src="{{ absolute_url(asset('assets/vendors/nouislider.min.js')) }}"></script>
    <!-- Select Plugin -->
    <script src="{{ absolute_url(asset('assets/vendors/jquery.select-bootstrap.js')) }}"></script>
    <!--  DataTables.net Plugin    -->
    <script src="{{ absolute_url(asset('assets/vendors/jquery.datatables.js')) }}"></script>
    <!-- Sweet Alert 2 plugin -->
    <script src="{{ absolute_url(asset('assets/vendors/sweetalert/js/sweetalert2.min.js')) }}"></script>
    <!--	Plugin for Fileupload, full documentation here: http://www.jasny.net/bootstrap/javascript/#fileinput -->
    <script src="{{ absolute_url(asset('assets/vendors/jasny-bootstrap.min.js')) }}"></script>
    <!--  Full Calendar Plugin    -->
    <script src="{{ absolute_url(asset('assets/vendors/fullcalendar.min.js')) }}"></script>
    <!-- TagsInput Plugin -->
    <script src="{{ absolute_url(asset('assets/vendors/jquery.tagsinput.js')) }}"></script>
    <!-- Material Dashboard javascript methods -->
    <script src="{{ absolute_url(asset('assets/js/amaze.js')) }}"></script>
    <!-- Material Dashboard DEMO methods, don't include it in your project! -->
    <script src="{{ absolute_url(asset('assets/js/demo.js')) }}"></script>
    <script type="text/javascript">
        $().ready(function(){
            $('#allInputsFormValidation').validate();
            // Init DatetimePicker
            demo.initFormExtendedDatetimepickers();
        });
    </script>
{% endblock %}