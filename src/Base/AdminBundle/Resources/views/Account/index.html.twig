{% extends '@BaseAdmin/Template/layout.html.twig' %}

{% block body %}
    <!-- BEGIN PAGE HEADER-->
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="{{ path('base_admin_dashboard') }}">Dashboard</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>List Account</span>
            </li>
        </ul>
    </div>
    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title"> List Account
    </h1>
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light" id="admin-portlet-ajax">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-list"></i>
                        <span class="caption-subject bold uppercase"> List Account</span>
                    </div>
                    <div class="actions">
                        <a href="javascript:;" onclick="PortletAjax.loadContent()" class="btn btn-circle btn-default" >
                            <i class="fa fa-spinner"></i> Reload </a>
                        <a href="{{ path('base_admin_account_update') }}" class="btn btn-circle btn-default">
                            <i class="fa fa-plus"></i> Add </a>
                        <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <form class="form-horizontal" id="formSearch" role="form" action="javascript:;">
                        <div class="form-group">
                            <label for="searchName" class="col-md-2 control-label">Name</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="searchName" name="searchName" placeholder="Name">
                            </div>
                            <label for="searchEmail" class="col-md-2 control-label">Email</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="searchEmail" name="searchEmail" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="searchName" class="col-md-2 control-label">Username</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="searchUsername" name="searchUsername" placeholder="Username">
                            </div>
                            <label for="searchEmail" class="col-md-2 control-label">Created Date</label>
                            <div class="col-md-4">
                                <div class="input-group date-picker input-daterange" data-date="10/11/2012" data-date-format="dd/mm/yyyy">
                                    <input type="text" class="form-control" name="fromCreatedDate">
                                    <span class="input-group-addon"> to </span>
                                    <input type="text" class="form-control" name="toCreatedDate">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="searchName" class="col-md-2 control-label">Status</label>
                            <div class="col-md-4">
                                <div class="mt-radio-inline">
                                    <label class="mt-radio">
                                        <input type="radio" name="searchStatus" id="searchStatusAll" value="" checked> All
                                        <span></span>
                                    </label>
                                    <label class="mt-radio">
                                        <input type="radio" name="searchStatus" id="searchStatusActive" value="true"> Active
                                        <span></span>
                                    </label>
                                    <label class="mt-radio">
                                        <input type="radio" name="searchStatus" id="searchStatusInactive" value="false"> Inactive
                                        <span></span>
                                    </label>
                                </div>
                            </div>
                            <label for="searchEmail" class="col-md-2 control-label">Updated Date</label>
                            <div class="col-md-4">
                                <div class="input-group date-picker input-daterange" data-date="10/11/2012" data-date-format="dd/mm/yyyy">
                                    <input type="text" class="form-control" name="fromUpdatedDate">
                                    <span class="input-group-addon"> to </span>
                                    <input type="text" class="form-control" name="toUpdateDate">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="button" class="btn blue pull-right" onclick="PortletAjax.loadContent()">Search</button>
                            </div>
                        </div>
                    </form>
                    <div class="portlet-list"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_level_plugin %}
    <script src="{{ absolute_url(asset('assets/global/plugins/moment.min.js')) }}" type="text/javascript"></script>
    <script src="{{ absolute_url(asset('assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js')) }}" type="text/javascript"></script>
    <script src="{{ absolute_url(asset('assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js')) }}" type="text/javascript"></script>
{% endblock %}

{% block page_level_script %}
    <script src="{{ absolute_url(asset('assets/pages/scripts/portlet-ajax.min.js')) }}" type="text/javascript"></script>
    <script src="{{ absolute_url(asset('assets/pages/scripts/components-date-time-pickers.min.js')) }}" type="text/javascript"></script>
{% endblock %}

{% block additional_script %}
    <script>
        $(function () {
            PortletAjax.setAPIListUrl('{{ path('base_admin_ajax_list_account') }}');
            PortletAjax.setAPIDeleteUrl('{{ path('base_admin_ajax_delete_account') }}');
            PortletAjax.loadContent();
        });
    </script>
{% endblock %}