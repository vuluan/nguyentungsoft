    <!--  Full Calendar Plugin    -->
    <script src="{{ absolute_url(asset('assets/vendors/fullcalendar.min.js')) }}"></script>
    <!-- TagsInput Plugin -->
    <script src="{{ absolute_url(asset('assets/vendors/jquery.tagsinput.js')) }}"></script>
    <!-- Material Dashboard javascript methods -->
    <script src="{{ absolute_url(asset('assets/js/amaze.js')) }}"></script>
    <!-- Material Dashboard DEMO methods, don't include it in your project! -->
    <script src="{{ absolute_url(asset('assets/js/demo.js')) }}"></script>
    <script type="text/javascript">
        $().ready(function(){
            $('#allInputsFormValidation').validate();
        });
    </script>
{% endblock %}