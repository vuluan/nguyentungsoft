{# item \Base\AdminBundle\Entity\Product #}
{% set items = products['items'] %}
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th> # </th>
                <th> Status </th>
                <th> Main Image </th>
                <th> Name </th>
                <th> Created Date </th>
                <th> Updated Date </th>
                <th> Actions </th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td> {{ loop.index }} </td>
                <td>
                    {% if item.active %}
                        <span class="label label-sm label-info"> Active </span>
                    {% else %}
                        <span class="label label-sm label-danger"> Inactive </span>
                    {% endif %}
                </td>
                <td>
                    {% if item.mainImage is not null and item.mainImage | trim != "" %}
                        <img src="{{ '/products/' ~ item.mainImage }}" alt="">
                    {% else %}
                        <img src="http://www.placehold.it/100x100/EFEFEF/AAAAAA&text=no+image" alt="">
                    {% endif %}
                </td>
                <td> {{ item.name }} </td>
                <td> {{ item.createdDate.format('d/M/Y H:i') }} </td>
                <td> {{ item.updatedDate.format('d/M/Y H:i') }} </td>
                <td>
                    <a href="{{ path('base_admin_product_update', { 'id': item.id }) }}" class="btn btn-sm green-meadow"><i class="fa fa-edit"></i> Edit </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{{ paginationView | raw }}