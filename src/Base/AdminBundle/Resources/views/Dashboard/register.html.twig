<script src="{{ absolute_url(asset('assets/vendors/bootstrap-notify.js')) }}"></script>
<!-- DateTimePicker Plugin -->
<script src="{{ absolute_url(asset('assets/vendors/bootstrap-datetimepicker.js')) }}"></script>
<!--  Checkbox, Radio, Switch and Tags Input Plugins -->
<script src="{{ absolute_url(asset('assets/js/bootstrap-checkbox-radio-switch-tags.js')) }}"></script>
<!-- Vector Map plugin -->
<script src="{{ absolute_url(asset('assets/vendors/jquery-jvectormap.js')) }}"></script>
<!-- Sliders Plugin -->
<script src="{{ absolute_url(asset('assets/vendors/nouislider.min.js')) }}"></script>
<!-- Select Plugin -->
