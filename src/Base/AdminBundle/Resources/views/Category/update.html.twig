{% extends '@BaseAdmin/Template/layout.html.twig' %}

{% block body %}
    {# category \Base\AdminBundle\Entity\Category #}
    <!-- BEGIN PAGE HEADER-->
    <!-- BEGIN PAGE BAR -->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="{{ path('base_admin_dashboard') }}">Dashboard</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Update Category Information</span>
            </li>
        </ul>
    </div>
    <!-- END PAGE BAR -->
    <!-- BEGIN PAGE TITLE-->
    <h1 class="page-title">Update Category Information
    </h1>
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit portlet-form bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-bubble font-green"></i>
                        <span class="caption-subject font-green bold uppercase">Update Category Information</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <!-- BEGIN FORM-->
                    <form action="#" id="formCategory" name="formCategory" class="form-horizontal" novalidate="novalidate">
                        <input type="hidden" name="formCategory[id]" id="categoryId" value="{{ category is defined ? category.id : '0' }}">
                        <div class="form-body">
                            <div class="alert alert-danger display-hide">
                                <button class="close" data-close="alert"></button> You have some form errors. Please check below. </div>
                            <div class="alert alert-success display-hide">
                                <button class="close" data-close="alert"></button> Your form validation is successful! </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Active</label>
                                <div class="col-md-4">
                                    <div class="bootstrap-switch bootstrap-switch-wrapper bootstrap-switch-small bootstrap-switch-id-test bootstrap-switch-animate">
                                        <div class="bootstrap-switch-container">
                                            <input type="checkbox" class="make-switch" {{ category is defined ? category.active ? 'checked="checked"' : '' : '' }} name="formCategory[active]" data-size="mini">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group  margin-top-20">
                                <label class="control-label col-md-3">Name
                                    <span class="required" aria-required="true"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        <input type="text" class="form-control" value="{{ category is defined ? category.name : '' }}" name="formCategory[name]">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group  margin-top-20">
                                <label class="control-label col-md-3">Parent</label>
                                <div class="col-md-4">
                                    {# parent \Base\AdminBundle\Entity\Category #}
                                    <select class="bs-select form-control" name="formCategory[parentId]" data-live-search="true" data-size="8">
                                        <option value="0">-- [Parent] --</option>
                                        {% for parent in parents %}
                                            <option {{ category is defined ? category.parentId == parent.id ? 'selected="selected"' : '' : '' }} value="{{ parent.id }}">{{ parent.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green">Submit</button>
                                    <a href="{{ path('base_admin_category_index') }}" class="btn default">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block page_level_plugin %}
    <script src="{{ absolute_url(asset('assets/global/plugins/select2/js/select2.full.min.js')) }}" type="text/javascript"></script>
    <script src="{{ absolute_url(asset('assets/global/plugins/jquery-validation/js/jquery.validate.min.js')) }}" type="text/javascript"></script>
    <script src="{{ absolute_url(asset('assets/global/plugins/jquery-validation/js/additional-methods.min.js')) }}" type="text/javascript"></script>
    <script src="{{ absolute_url(asset('assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js')) }}" type="text/javascript"></script>
    <script src="{{ absolute_url(asset('assets/global/plugins/bootstrap-toastr/toastr.min.js')) }}" type="text/javascript"></script>
    <script src="{{ absolute_url(asset('assets/global/plugins/bootstrap-select/js/bootstrap-select.min.js')) }}" type="text/javascript"></script>
{% endblock %}

{% block page_level_script %}
    <script src="{{ absolute_url(asset('assets/pages/scripts/form-validation-category.min.js')) }}" type="text/javascript"></script>
    <script src="{{ absolute_url(asset('assets/pages/scripts/ui-toastr.min.js')) }}" type="text/javascript"></script>
    <script src="{{ absolute_url(asset('assets/pages/scripts/components-bootstrap-select.min.js')) }}" type="text/javascript"></script>
{% endblock %}