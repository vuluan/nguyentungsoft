{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tableaccount</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tableAccount.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tableAccount.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ tableAccount.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ tableAccount.phone }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ tableAccount.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ tableAccount.password }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if tableAccount.status %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Createdate</th>
                <td>{% if tableAccount.createDate %}{{ tableAccount.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tableaccount_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('tableaccount_edit', { 'id': tableAccount.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
